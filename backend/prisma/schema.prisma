// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id   Int      @id @default(autoincrement())
  title String
  members Person[]
  issues Issue[]

  @@map("organisation")
}

model Person {
  id                Int           @id @default(autoincrement())
  fullName          String
  emailAddress      String        @unique
  passwordHash      String
  userType          UserType      @default(NORMAL)
  lastSeenAt        DateTime?     @map("last_login_at")
  createdOn         DateTime      @default(now()) @map("created_at")
  updatedOn         DateTime      @updatedAt @map("updated_at")
  companyId         Int           @map("organisation_id")
  company           Company       @relation(fields: [companyId], references: [id])
  issues            Issue[]
  tokens            SessionToken[]

  @@map("users")
  @@index([emailAddress])
  @@index([companyId])
}

model SessionToken {
  id        Int      @id @default(autoincrement())
  value     String   @unique
  personId  Int      @map("user_id")
  person    Person   @relation(fields: [personId], references: [id], onDelete: Cascade)
  expiresOn DateTime @map("expires_at")
  createdOn DateTime @default(now()) @map("created_at")
  revoked   Boolean  @default(false) @map("is_revoked")

  @@map("refresh_tokens")
  @@index([personId])
  @@index([value])
}

model Issue {
  id             Int           @id @default(autoincrement())
  subject        String
  details        String?
  state          String        @default("open")
  personId       Int           @map("user_id")
  companyId      Int           @map("organisation_id")
  createdOn      DateTime      @default(now()) @map("created_at")
  person         Person        @relation(fields: [personId], references: [id])
  company        Company       @relation(fields: [companyId], references: [id])

  @@map("tickets")
}

enum UserType {
  ADMIN
  NORMAL
  SUPPORT
}